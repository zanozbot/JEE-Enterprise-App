<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Upravljanje z zaposlenimi</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        input, label, select, a {margin-top: 10px;}
    </style>
  </head>
  <body>
    <div class="container" style="background-color: #5bc0de;">
        <h1><center><span style="color: white;" class="glyphicon glyphicon-user"></span></center></h1>
    </div>  
    <div class="container fluid">
            <%  var buttonText = "Kreiraj stik";
                var ime = "";
                var priimek = "";
                var oddelek = "";
                var stevilka = "";
                var key = -1;
                if(zaposleni != null) {
                    buttonText="Posodobi podatke"
                    ime = zaposleni.ime;
                    priimek = zaposleni.priimek;
                    oddelek = zaposleni.oddelek;
                    stevilka = zaposleni.stevilka;
                    key = zaposleni.key;
                };
            %>
            <div class="row">
                <form action="/uredi" method="post" enctype="multipart/form-data">
                 <div class="form-group">
                    <label class="control-label col-sm-2" for="ime">Ime:</label>
                    <div class="col-sm-10">
                       <input type="text" name="ime" class="form-control" id="ime" value="<%- ime %>" placeholder="Vnesi ime" required>
                     </div>
                </div>
                 <div class="form-group">
                    <label class="control-label col-sm-2" for="priimek">Priimek:</label>
                    <div class="col-sm-10">
                       <input type="text" name="priimek" class="form-control" id="priimek" value="<%- priimek %>" placeholder="Vnesi priimek" required>
                     </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="oddelek">Oddelek:</label>
                    <div class="col-sm-10">
                        <select name="oddelek" class="form-control select" id="oddelek" required>
                        <option value="">Izberi oddelek</option>
                        <option value="Finance">Finance</option>
                        <option value="Prodaja">Prodaja</option>
                        <option value="Razvoj">Razvoj</option>
                        <option value="Administracija">Administracija</option>
                      </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="its"><span data-toggle="tooltip" data-placement="top" title="Interna telefonska številka">ITŠ:</span></label>
                    <div class="col-sm-10">
                       <input type="text" name="its" class="form-control" id="its" value="<%- stevilka %>" placeholder="Vnesi interno telefonsko številko" required>
                     </div>
                </div> 
                <input name="key" type="hidden" class="btn btn-default" value="<%- key %>"/>
                 <div class="form-group">
                     <div class="col-sm-offset-2 col-sm-10">
                        <input name="stik" type="submit" class="btn btn-info" value="<%- buttonText %>" />
                        <a href="/" class="btn btn-default" role="button">Prekliči</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script>
        $('.select').val("<%- oddelek %>");
        
        $('[data-toggle="tooltip"]').tooltip();
    </script>
  </body>
</html>